rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /document/{recordId} {
      allow read: if true;
      allow write: if true;
    }
    match /documentVersion/{recordId} {
      allow read: if true;
      allow write: if true;
    }
    match /sentenceRecord/{recordId} {
      allow read: if true;
      allow write: if true;
    }
    match /matchRecord/{recordId} {
      allow read: if true;
      allow write: if false;
    }
    match /documentView/{recordId} {
      allow read: if true;
      allow write: if true;
    }
    match /flashCard/{recordId} {
      allow read: if true;
      allow write: if true;
    }
    match /privateUser/{recordId} {
      allow read: if false;
      allow create: if true;
    }
  }
}
